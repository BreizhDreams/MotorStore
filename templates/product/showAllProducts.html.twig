{% extends 'base.html.twig' %}
{% block title %} Nos Produits - MotorStore {% endblock %}

{% block body %}
<div class="pageTitleDiv">
    <h1 class="pageTitleH1">Tous nos Produits :</h1>
</div>
<div class="row">
    <div class="col-md-3">
        <div class="form-control">
            <h3>Filtrer :</h3>
            {{ form(form) }}
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            {% for productVO in productVOs %}
            <div class="col-md-4">
                <a href="{{ path('voirProduit',{'slug' : productVO.slug}) }}">
                    <div class="itemProduct">
                        <div class="imageProductItem">
                            <img src="/uploads/{{productVO.photoURL}}" alt="" class="img-fluid rounded">
                        </div>
                        <h5>{{productVO.designation}}</h5>
                        <p>{{productVO.brandVO}}</p>
                        <span class="productPrice">
                            <p>{{(productVO.prixTTC / 100)|number_format(2,',','.')}} â‚¬</p>
                        </span>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}