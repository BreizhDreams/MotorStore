{% extends 'base.html.twig' %}
{% block title %}{{ subCategoryVO.designation}} - MotorStore {% endblock %}

{% block body %}
<div class="pageTitleDiv">
    <h1 class="pageTitleH1">{{ subCategoryVO.designation }}</h1>
    <p class="pageTitleSummary" >
        <a href="{{path('homePage')}}">Accueil</a> / 
        <a href="{{path('showCategory',{'slug' : subCategoryVO.categoryVO.slug})}}">{{subCategoryVO.categoryVO}}</a>
    </p>
</div>
{% block container %}
    <div class="container">
        <div class="categoryStyle" style="margin-left: 15%; margin-right: 15%; margin-top:3em">
            <p class="categoryDescr">{{subCategoryVO.description}}</p>
        </div>
        <div class="row">
            {% for productVO in subCategoryVO.getProductVOs() %}
            <div class="col-md-4 px-5 pt-5">
                {% include 'product/singleProduct.html.twig'%}
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock container %}
{% endblock body %}