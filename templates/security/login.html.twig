{% extends 'base.html.twig' %}

{% block title %}Connexion - MotorStore {% endblock %}

{% block body %}
<div class="pageTitleDiv">
    <h1 class="pageTitleH1">Connexion</h1>
    <p class="pageTitleSummary" style="text-align: left; font-size:smaller">
        <a href="{{path('homePage')}}">Accueil</a>
    </p>
</div>
<section class="container my-3">
    <div class="row">
        <div class="col">

            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('logOut') }}">Me déconnecter</a>
                </div>
                {% endif %}
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de Passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                    autocomplete="current-password"  required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-success" type="submit">
                    Connexion
                </button>
                <a href="{{path('registration')}}" class="btn btn-secondary">M'inscrire</a>
            </form>
        </div>
    </div>
</section>


{% endblock %}