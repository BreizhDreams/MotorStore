{% extends 'base.html.twig' %}

{% block title %} Mot de Passe - MotorStore {% endblock %}

{% block body %}
<div class="pageTitleDiv">
    <h1 class="pageTitleH1">Gestion de votre Mot de Passe</h1>
</div>

{% block container %}
    <div class="container">
        <h1>Bienvenue dans votre espace personnelle ! </h1>
        <hr>
        {% for message in app.flashes('warning') %}
        <div class="alert alert-warning mt-4">
            {{message}}
        </div>
        {% endfor %}
        
        <div style="text-align:left">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12 my-3">
                    {{form_row(form.email)}}
                </div>
                <div class="col-md-6 my-3">
                    {{form_row(form.lastname)}}
                </div>
                <div class="col-md-6 my-3">
                    {{form_row(form.firstname)}}
                </div>
                <div class="col-md-12 my-3">
                    {{form_row(form.old_password)}}
                </div>
                <div class="col-md-12 my-3">
                    {{form_row(form.new_password)}}
                </div>
                <div class="col-md-12 my-3">            
                    {{form_row(form.submit)}}
                </div>
            </div>
            {{form_end(form)}}
    </div>
{% endblock container %}
{% endblock %}
