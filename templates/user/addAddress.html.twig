{% extends 'base.html.twig' %}

{% block title %} Gestion d'une Adresse - MotorStore {% endblock %}

{% block body %}
<div class="pageTitleDiv">
    <h1 class="pageTitleH1">Gestion d'une Adresse</h1>
    <p class="pageTitleSummary" >
        <a href="{{path('homePage')}}">Accueil</a> / 
        <a href="{{path('profile')}}">Mon Profil</a> / 
        <a href="{{path('showAddress')}}">Mes Adresses</a>
    </p>
</div>
{% block container %}
    <div class="container">
        <div style="text-align:left">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{form_row(form.name)}}
                </div>
                <hr class="my-3">
                <div class="col-md-6">
                    {{form_row(form.lastName)}}
                </div>
                <div class="col-md-6 ">
                    {{form_row(form.firstName)}}
                </div>
                <div class="col-md-12">
                    {{form_row(form.address)}}
                </div>
                <div class="col-md-6">
                    {{form_row(form.postalCode)}}
                </div>
                <div class="col-md-6 ">
                    {{form_row(form.city)}}
                </div>
            </div>
            {{ form_end(form)}}
        </div>
    </div>
{% endblock container %}
{% endblock %}